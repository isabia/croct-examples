{
  "title": "Magic UI Marquee",
  "description": "Import the Marquee example into the project.",
  "actions": [
    {
      "name": "define",
      "variables": {
          "examplePath": "${project.path.example}/marquee"
      }
    },
    {
      "name": "locate-file",
      "path": "**/marquee.{jsx,tsx}",
      "max": 1,
      "matcher": {
        "pattern": "export default function Marquee"
      },
      "output": {
        "paths": "componentPaths",
        "extensions": "componentExtensions"
      }
    },
    {
      "name": "test",
      "if": "${this.componentPaths.length === 0}",
      "run": {
        "name": "fail",
        "title": "Component not found",
        "message": "Unable to locate the `<Marquee>` component.",
        "suggestions": [
          "Run the command `npx shadcn@latest add \"Marquee\"` to add the component",
          "Do not rename or refactor the component yet",
          "Try again"
        ]
      }
    },
    {
      "name": "create-resource",
      "resources": {
        "components": {
          "magic-ui-marquee-reviews": "${ import('component.json') }"
        },
        "slots": {
          "magic-ui-user-reviews": {
            "name": "Magic UI - User reviews",
            "component": "magic-ui-marquee-reviews",
            "content": {
              "en": "${ import('default-content.en.json') }"
            }
          }
        }
      },
      "output": {
        "slots": {
          "magic-ui-user-reviews": "slotId"
        }
      }
    },
    {
      "name": "add-slot",
      "slots": [
        "${this.slotId}"
      ]
    },
    {
      "name": "download",
      "source": "${project.platform}/page.${this.componentExtensions[0]}",
      "destination": "${this.examplePath}",
      "output": {
        "destination": "examplePath"
      }
    },
    {
      "name": "resolve-import",
      "target": "${this.componentPaths[0]}",
      "source": "${project.path.example}",
      "output": {
        "importPath": "importPath"
      }
    },
    {
      "name": "replace-file-content",
      "files": [
        {
          "path": "${this.examplePath}/page.${this.componentExtensions[0]}",
          "replacements": [
            {
              "pattern": "(?<=from )\"@/components/ui/marquee\"",
              "value": "\"${this.importPath}\""
            },
            {
              "pattern": "%slotId%",
              "value": "${this.slotId}"
            },
            {
              "pattern": "%workspaceUrl%",
              "value": "${project.workspace.url}"
            }
          ]
        }
      ]
    },
    {
      "name": "format-code",
      "files": [
        "${this.examplePath}/page.${this.componentExtensions[0]}"
      ]
    },
    {
      "name": "log",
      "semantic": "success",
      "message": "Component successfully imported at `${this.examplePath}`."
    },
    {
      "name": "prompt",
      "type": "confirmation",
      "message": "Open the example in the browser?",
      "default": false,
      "output": "openExample"
    },
    {
        "name": "test",
        "if": "${this.openExample}",
        "run": [
          {
            "name": "start-server",
            "output": {
              "url": "serverUrl"
            }
          },
          {
            "name": "open-link",
            "url": "${this.serverUrl}marquee"
          }
        ]
    }
  ]
}
